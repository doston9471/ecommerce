<h4>
  <strong>Name:</strong>
  <%= @product.name %>
</h4>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Num:</strong>
  <%= @product.num %>
</p>
<div class="container well">
  <h5><%= @product.description.html_safe %></h5>
</div>
<div class="panel panel-info">
    <br>
    <br>
    <div class="img">
      <%= image_tag @product.image_url(:medium) if @product.image? %>
    </div>
    <br>
  <%= button_to 'Add to Cart', line_items_path(product_id: @product, quantity: 1), remote: true %>
  <br>
  <%= link_to 'Edit', edit_product_path(@product) %> |
	<%= link_to 'Back', products_path %>
	<br>
	<br>
</div>