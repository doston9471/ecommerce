<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
   <!-- Indicators -->
 <ol class="carousel-indicators">
 
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <% num =Slider.where(status: true).count %>
    <% co = 1 %>
    <% while co<num %>
      <% co=co+1 %>
      <li data-target="#carousel-example-generic" data-slide-to="<%= co %>" ></li>
    <% end %>    
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">

    <% c=0 %>
    <% Slider.all.each do |f| %>
      <% if f.status == true %>
      <% c=c+1 %>
      <% if c == 1 %>
        <div class="item active">
      <% else %> 
        <div class="item">     
      <% end %>    
          <img src="<%= @slide=f.slide %>", class="img img-responsive" alt="...">
          <div class="carousel-caption">
            <%= f.header %>
            <%= f.content %>
          </div>
        </div>
      <% end %>
    
    <% end %>
    
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<h3>Products</h3>

<div class="container">
  <% @products.each do |product| %>
    <div class="row">
      <div class="item col-md-4 blog-main box text-center">
        <div class="panel panel-info">
          <h4><strong><%= link_to product.name, product_path(product) %></strong></h4>
          <%= image_tag product.image_url(:thumb), class: "image_item" %>
          <h6><%= product.price %></h6>
          <h6><%= product.num %></h6>
          <%= button_to 'Add to Cart', line_items_path(product_id: product, quantity: 1), remote: true %> 
        </div>     
      </div>
    </div>
  <% end %>
</div>

