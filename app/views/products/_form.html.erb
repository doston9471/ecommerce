<%= form_for(@product, html: {class: "form-horizontal", multipart: true }) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group small">
    <%= f.label "Product name" %>
    <%= f.text_field :name, class:"form-control" %>
  </div>

  <div class="form-group small">
    <%= f.label "Category" %>
    <%= f.collection_select :category_id, Category.all, :id, :title, class:"selectpicker" %> 
  </div>

  <div class="form-group small">
    <%= f.label :price %>
    <%= f.text_field :price, class:"form-control" %>
  </div>

  <div class="form-group small">
    <%= f.label "Number" %>
    <%= f.text_field :num, class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.cktext_area :description, rows: 10, class:"form-control"%>
  </div>

  <div class="form-group small">
    <%= f.file_field :image%>
  </div>

  <div class="form-group small">
    <%= f.submit(@product.new_record? ? 'Create Product' : 'Edit Product', class: "btn btn-default") %>
  </div>
  <hr>
<% end %>