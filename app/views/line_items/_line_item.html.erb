<% if line_item == @current_item %>
	<tr id="current_item">
<% else %>
<tr>
<% end %>
	
	<td><%= line_item.product.name %></td>
	<td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
	<td>
	      <input type="number" class="form-control" id="exampleInputAmount" placeholder="" value="<%= line_item.quantity %>" >
	</td>
	<td><%= button_to 'Remove', line_item, method: :delete, class: 'btn btn-danger' %></td>
</tr>

